{% extends 'layout.jinja2' %}

{% block main %}
<h3>Edit Person</h3>
<hr/>
{# Using the same form as of add new with few changes in post url and input default values#}
<form method="POST" action="{{ url_for('update_people',pid= data[0]) }}">
  <div class="form-group">
    <label>Firstname</label>
    <input type="text" name="firstname" class="form-control" value= "{{ data[1] }}"/>
  </div>
  

  <div class="form-group">
    <label>Lastname</label>
    <input type="text" name="lastname" class="form-control" value="{{ data[2] }}" />
  </div>
  

  <div class="form-group">
    <label>Address</label>
    <input type="text" name="address" class="form-control" value="{{ data[3] }}"/>
  </div>
  

  <div class="form-group">
    <label>Country</label>
    <input type="text" name="country" class="form-control" value="{{ data[4] }}" />
  </div>
  
  <input type="submit" name="submit" class="btn btn-primary" value="Save" />
</form>
{% endblock %}