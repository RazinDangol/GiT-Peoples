{% extends 'layout.jinja2' %}

{% block main %}
<table class="table table-striped">
    <thead>
        <tr>
            <th>S.N</th>
            <th>Firstname</th>
            <th>Lastname</th>
            <th>Address</th>
            <th>Country</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>

        {% for row in data %}
        <tr id="tr-{{ row[0] }}">
            <td class="id">{{ row[0] }}</td>
            <td class="firstname">{{ row[1] }}</td>
            <td class="lastname">{{ row[2] }}</td>
            <td class="address">{{ row.3 }}</td>
            <td class="country">{{ row.4 }}</td>
            <td class="button">
                <button type="edit" class="btn btn-primary edit" id="btn-edit-{{ row[0] }}">Edit</button> | <button type="delete" class="btn btn-danger delete" id="btn-del-{{ row[0] }}">Delete</button></td>
        </tr>
        {% endfor %}
        
    </tbody>
</table>
    
{% endblock %}